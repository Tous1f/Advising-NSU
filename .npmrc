# NPM configuration for BatSched project
# Ensures consistent package installation across environments

# Use production registry
registry=https://registry.npmjs.org/

# Disable package-lock generation during CI
package-lock=true

# Set cache directory
cache=/tmp/npm-cache

# Log level
loglevel=warn

# Save exact versions
save-exact=true

# Install dev dependencies by default
production=false

# Fund messages
fund=false

# Update notifier
update-notifier=false

# Audit level
audit-level=moderate

# Engine strict
engine-strict=true
