{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "files.associations": {
    "*.js": "javascript",
    "*.ts": "typescript",
    "*.json": "jsonc"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "html.format.wrapAttributes": "force-aligned",
  "css.validate": true,
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/android/build": true,
    "**/android/.gradle": true,
    "**/.DS_Store": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/android/build": true,
    "**/android/.gradle": true
  },
  "live-server.settings.port": 5500,
  "live-server.settings.CustomBrowser": "chrome",
  "live-server.settings.donotShowInfoMsg": true,
  "workbench.colorCustomizations": {
    "activityBar.background": "#0b0f15",
    "activityBar.foreground": "#ffd400"
  }
}
